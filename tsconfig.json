{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strict": true,
		"declaration": true,
		"types": ["node"],
		"allowUnreachableCode": false,
		"typeRoots": [
			// add path to @types
			"node_modules/@types"
		]
	},
	"include": [
		"./src/"
	]
}